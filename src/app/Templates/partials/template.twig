<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, minimum-scale=1.0">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <title>Slim 3 Boilerplate</title>
    <link rel="stylesheet" href="{{ base_url() }}/node_modules/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ base_url() }}/node_modules/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ base_url() }}/css/admin.css">
</head>
<body id="admin">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="/"><img src="{{ base_url() }}/images/logo.png" alt="Logo" class="img-fluid logo"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                {% include('partials/navigation.twig') %}
            </div>
        </nav>
    </header>
    <main class="container-fluid pt-4 pb-5">
        {% include('partials/flash.twig') %}
        {% block content %}{% endblock %}
    </main>
    <footer class="fixed-bottom bg-light">
        <div class="container">
            <div class="row">
                <div class="col content">
                    <div class="footer-copyright text-right py-3">
                        <i class="fa fa-copyright"></i> {{'now'|date('Y')}}&nbsp;<a href="https://stefano-borzoni.com" class="text-dark" target="_blank">Stefano Borzoni</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <div class="modal fade" id="modal_confirm" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"><i class="fa fa-times"></i></span>
                    </button>
                </div>
                <div class="modal-body">
                    <p></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-ok"></a>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="{{ base_url() }}/node_modules/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="{{ base_url() }}/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="{{ base_url() }}/js/admin.js"></script>
</body>
</html>